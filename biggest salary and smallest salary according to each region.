7)	Find the difference between biggest salary and smallest salary according to each region.

WITH CTE_1 AS 
(SELECT 
REGION, MAX(SALARY) AS MAX_SALARY 
FROM 
EMPLOYEE 
GROUP BY 1),

CTE_2 AS 
(SELECT 
REGION, MIN(SALARY) AS MIN_SALARY 
FROM 
EMPLOYEE 
GROUP BY 1),

CTE_3 AS 
(SELECT * 
FROM CTE_1 INNER JOIN CTE_2 
ON CTE.REGION = CTE_2.REGION)

SELECT *, (MAX_SALARY â€“ MIN_SALARY) AS SALARY_DIFF FROM CTEEE ;
